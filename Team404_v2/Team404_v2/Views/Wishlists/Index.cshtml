@model IEnumerable<Team404_v2.Models.Wishlist>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemNames)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LinkRemove)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Undo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prices1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prices2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prices3)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemNames)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinkRemove)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Undo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prices1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prices2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prices3)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
