@using Team404_v2.Models;
@model AdaptersVM

@{
    ViewBag.PageTitle = "Adapers";
    ViewBag.PageName = "Adapers";
}



@foreach (var A in Model.AdaptersItems)
{
    <div class="item">
        <h4>@A.ItemTitle</h4>
        <h2>@A.ItemPrice</h2>
        <div class="minidescription">
            <ul>
                @foreach (var bp in A.MiniDescription)
                {
                    <li>@bp</li>
                }
            </ul>
            <button class="Link"> @A.ItemLink </button>
        </div>
    </div>
	<div id="hidden">
		<p><b>Feature Summary</b></p>
		<div id="long">
			<ul>
				@foreach (var more in A.LongDescription)
				{
					<li>@more</li>
				}
			</ul>
			>
			<button type="button" id="Wishlist">@A.Wishlist</button>
			<button type="button" id="Remove">@A.RemoveDetails</button>
		</div>
		<table id="pricetable">
			<tr>
				<th id="colname">Online Retailer</th>
				<th id="colname">Price</th>
			</tr>
			<tr>
				<td id="box">
					<a href="#" target="_blank">
						@A.Price1Name
					</a>
				</td>
				<td id="box">$@A.ItemPrice</td>
			</tr>
			<tr>
				<td id="box"><a href="#" target="_blank"></a>@A.Price2Name</td>
				<td id="box">$@A.ItemPrice2</td>
			</tr>
		</table>
	</div>
}