@using Team404_v2.Models;
@model ChargersVM

@{
    ViewBag.PageTitle= "Chargers";
    ViewBag.PageName = "Chargers";

}



@foreach (var C in Model.ChargersItems)
{
    <div class="item">
        <h4>@C.ItemTitle</h4>
        <h2>@C.ItemPrice</h2>

        <div class="minidescription">
            <ul>
                @foreach (var bp in C.MiniDescription)
                {
                    <li>@bp</li>
                }
            </ul>
            <button class="Link"> @C.ItemLink </button>
        </div>
    </div>
	<div id="hidden">
		<p><b>Feature Summary</b></p>
		<div id="long">
			<ul>
				@foreach (var more in C.LongDescription)
				{
					<li>@more</li>
				}
			</ul>
			<button type="button" id="Wishlist">@C.Wishlist</button>
			<button type="button" id="Remove">@C.RemoveDetails</button>
		</div>
		<table id="pricetable">
			<tr>
				<th id="colname">Online Retailer</th>
				<th id="colname">Price</th>
			</tr>
			<tr>
				<td id="box">
					<a href="#" target="_blank">
						@C.Price1Name
					</a>
				</td>
				<td id="box">$@C.ItemPrice</td>
			</tr>
			<tr>
				<td id="box"><a href="#" target="_blank"></a>@C.Price2Name</td>
				<td id="box">$@C.ItemPrice2</td>
			</tr>
		</table>
	</div>
}