
@model Team404_v2.Models.ProductVM

@{
    ViewBag.PageTitle = "Cases";
    ViewBag.PageName = "Cases";
}

 

@foreach (var cpcase in Model.Products)
{
    <div class="item">
		<img class="itemimages" src="~/Content/images/computerpartsimages/Item1image.png" height="200" width="180">
        <h4>@cpcase.ItemTitle</h4>
        <h2>$@cpcase.ItemPrice</h2>
        <div class="minidescription">
            <ul>
				<li>@cpcase.MiniDescription</li>
				<li>@cpcase.MiniDescription2</li>
				<li>@cpcase.MiniDescription3</li>
            </ul>
		
            <button type="button" class="btn btn-info" id="Link">@cpcase.ItemLink</button>
        </div>
    </div>

	<div id="hidden">
		<h4><b>Product Summary</b></h4>
		<div id="long">
			<ul>	
			    <li>@cpcase.LongDescription1</li>
				<li>@cpcase.LongDescription2</li>
				<li>@cpcase.LongDescription3</li>
			</ul>
            <p class="button">
                @Html.ActionLink("Add to Cart", "AddToWishlist", "Wishlists", new { id = cpcase.ProductId }, "")
            </p>
			<button type="button" class="btn btn-info" id="Remove">@cpcase.RemoveDetails</button>
		</div>
		<table id="pricetable">
			<tr>
				<th id="colname">Online Retailer</th>
				<th id="colname">Price</th>
			</tr>
			<tr>
				<td id="box">
				    <a href="@cpcase.Price1Link" target="_blank">@cpcase.Price1Name</a></td>
				<td id="box">$@cpcase.ItemPrice</td>
			</tr>
			<tr>
				<td id="box"><a href="@cpcase.Price2Link" target="_blank"></a>@cpcase.Price2Name</td>
				<td id="box">$@cpcase.ItemPrice2</td>
			</tr>
		</table>
	</div>
}