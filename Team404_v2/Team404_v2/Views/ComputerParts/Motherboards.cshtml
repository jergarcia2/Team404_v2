@using Team404_v2.Models;
@model MotherboardVM

@{
    ViewBag.PageTitle = "Motherboards";
    ViewBag.PageName = "Motherboards";
}


@foreach (var MB in Model.MotherboardItems)
{
    <div class="item">
        <h4>@MB.ItemTitle</h4>
        <h2>@MB.ItemPrice</h2>
        <div class="minidescription">
            <ul>
                @foreach (var bp in MB.MiniDescription)
                {
                    <li>@bp</li>
                }
            </ul>
            <button class="Link"> @MB.ItemLink </button>
        </div>
    </div>
	<div id="hidden">
		<p><b>Feature Summary</b></p>
		<div id="long">
			<ul>
				@foreach (var more in MB.LongDescription)
				{
					<li>@more</li>
				}
			</ul>
			<button type="button" id="Wishlist">@MB.Wishlist</button>
			<button type="button" id="Remove">@MB.RemoveDetails</button>
		</div>
		<table id="pricetable">
			<tr>
				<th id="colname">Online Retailer</th>
				<th id="colname">Price</th>
			</tr>
			<tr>
				<td id="box">
					<a href="#" target="_blank">
						@MB.Price1Name
					</a>
				</td>
				<td id="box">$@MB.ItemPrice</td>
			</tr>
			<tr>
				<td id="box"><a href="#" target="_blank"></a>@MB.Price2Name</td>
				<td id="box">$@MB.ItemPrice2</td>
			</tr>
		</table>
	</div>
}