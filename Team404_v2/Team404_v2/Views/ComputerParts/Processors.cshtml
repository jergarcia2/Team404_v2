@using Team404_v2.Models;
@model ProcessorsVM

@{
    ViewBag.PageTitle = "Processors";
    ViewBag.PageName = "Processors";
}


@foreach (var P in Model.ProcessorsItems)
{
    <div class="item">
        <h4>@P.ItemTitle</h4>
        <h2>@P.ItemPrice</h2>
        <div class="minidescription">
            <ul>
                @foreach (var bp in P.MiniDescription)
                {
                    <li>@bp</li>
                }
            </ul>
            <button class="Link"> @P.ItemLink </button>
        </div>
    </div>
	<div id="hidden">
		<p><b>Feature Summary</b></p>
		<div id="long">
			<ul>
				@foreach (var more in P.LongDescription)
				{
					<li>@more</li>
				}
			</ul>
			<button type="button" id="Wishlist">@P.Wishlist</button>
			<button type="button" id="Remove">@P.RemoveDetails</button>
		</div>
		<table id="pricetable">
			<tr>
				<th id="colname">Online Retailer</th>
				<th id="colname">Price</th>
			</tr>
			<tr>
				<td id="box">
					<a href="#" target="_blank">
						@P.Price1Name
					</a>
				</td>
				<td id="box">$@P.ItemPrice</td>
			</tr>
			<tr>
				<td id="box"><a href="#" target="_blank"></a>@P.Price2Name</td>
				<td id="box">$@P.ItemPrice2</td>
			</tr>
		</table>
	</div>
}
