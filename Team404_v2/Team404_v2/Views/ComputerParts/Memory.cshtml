@using Team404_v2.Models;
@model MemoryVM

@{
    ViewBag.PageTitle = "Memory";
    ViewBag.PageName = "Memory";
}


@foreach (var M in Model.MemoryItems)
{
    <div class="item">
        <h4>@M.ItemTitle</h4>
        <h2>@M.ItemPrice</h2>
        <div class="minidescription">
            <ul>
                @foreach (var bp in M.MiniDescription)
                {
                    <li>@bp</li>
                }
            </ul>
            <button class="Link"> @M.ItemLink </button>
        </div>
    </div>
	<div id="hidden">
		<p><b>Feature Summary</b></p>
		<div id="long">
			<ul>
				@foreach (var more in M.LongDescription)
				{
					<li>@more</li>
				}
			</ul>
			<button type="button" id="Wishlist">@M.Wishlist</button>
			<button type="button" id="Remove">@M.RemoveDetails</button>
		</div>
		<table id="pricetable">
			<tr>
				<th id="colname">Online Retailer</th>
				<th id="colname">Price</th>
			</tr>
			<tr>
				<td id="box">
					<a href="#" target="_blank">
						@M.Price1Name
					</a>
				</td>
				<td id="box">$@M.ItemPrice</td>
			</tr>
			<tr>
				<td id="box"><a href="#" target="_blank"></a>@M.Price2Name</td>
				<td id="box">$@M.ItemPrice2</td>
			</tr>
		</table>
	</div>
}